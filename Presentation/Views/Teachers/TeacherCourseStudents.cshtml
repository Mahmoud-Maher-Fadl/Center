@model List<Core.ViewModels.StudentCourse.StudentCourseVm>

<form asp-action="SetStudentsGrade" method="post">
    <div class="row mb-2">
        @if (Model.Any())
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Students</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Student</th>
                                    <th>Grade</th>
                                </tr>
                                </thead>
                                <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input asp-for="@Model[i].Id" type="hidden" value="@Model[i].Id"/>
                                            @Model[i].StudentName
                                        </td>
                                        <td>
                                            <input asp-for="@Model[i].Grade" class="form-control"/>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary"/>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-6">
                <div class="alert alert-info" role="alert">
                    There are no students registered now
                </div>
            </div>
        }
    </div>
</form>